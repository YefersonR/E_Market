@using E_Market.Core.Application.ViewModels.User
@model LoginViewModel
@{
    ViewData["Title"] = "Usuario";
}

<div class="d-flex justify-content-center align-content-center" style="height:80vh;">
    <div class="w-50">
        <h4 class="card-title text-center ">Iniciar Seccion</h4>
        @Html.ValidationSummary(false,"",new {  @class="text-danger" })
        <form method="post" asp-controller="Usuario" asp-action="Index">
            <div class="mb-3">
                <label asp-for="UserName" class="form-label">Username: </label>
                <input asp-for="UserName" class="form-control">
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label">Contraseña: </label>
                <input asp-for="Password" class="form-control">
            </div>
            <button type="submit" class="btn btn-outline-primary">Iniciar session</button>
        </form>
    </div>
</div>