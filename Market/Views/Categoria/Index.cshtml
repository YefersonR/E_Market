@using E_Market.Core.Application.ViewModels.Categoria;
@model List<CategoriaViewModel>
@{
    ViewData["Title"] = "Products";
}

<div class="container-fluid">

    <div class="row">
        <div class="col-12">
                    <div class="row mb-1">
                            <h3 class="">Mantenimiento de Categorias</h3>
                        <div class="col-3 offset-10">
                            <a class="btn btn-outline-success" asp-controller="Categoria" asp-action="Create">Crear nueva categoria</a>
                        </div>
                    </div>
                    <div class="row mt-2">
                        @foreach (CategoriaViewModel item in Model)
                        {
                            <div class="col-4 mb-3">
                                <div class="card shadow-sm">
                                    
                                    <div class="card-body">
                                        <h3>@item.Nombre</h3>
                                        <p class="card-text">@item.Descripcion</p>
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div class="btn-group">
                                                <a asp-controller="Categoria" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Editar</a>
                                                <a asp-controller="Categoria" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Borrar</a>
                                            </div>
                                        </div>
                                        <small class="fw-bold">Hay @item.CantAnuncios anuncios de esta categoria de @item.CantUsuarios usuarios</small>

                                    </div>
                                </div>
                            </div>
                        }
                    </div>
        </div>
    </div>
</div>
