@using E_Market.Core.Application.ViewModels.Anuncio
@model SaveAnuncioViewModel
@{
    ViewData["Title"] = "Detail";
}



<div class="container-fluid d-flex flex-column justify-content-center align-items-center">
    <div class="">
        <div id="carouselExampleFade" class="carousel slide carousel-fade w-50" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active" data-bs-interval="2000">
                    <img src="https://www.creativefabrica.com/wp-content/uploads/2018/11/E-market-icon-vector-by-rudezstudio-1-580x386.jpg" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="https://www.creativefabrica.com/wp-content/uploads/2018/12/CD-by-rudezstudio-580x386.jpg" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="https://www.creativefabrica.com/wp-content/uploads/2018/12/Emarket-icon-by-rudezstudio-580x386.jpg" class="d-block w-100" alt="...">
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden"></span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden"></span>
            </button>
        </div>
    </div>
</div>
<div class="">
    <h1>@Model.Nombre</h1>
    <h3>@Model.Descripcion</h3>
    <span>@Model.Precio</span>
    <p>@Model.Created</p>

</div>
